@page "/Admin/Promos/Manage"
@page "/Admin/Promos/Manage/{PromoId:guid}"
@layout AdminLayout

<h3>Manage Promos</h3>

<EditForm Model="@PromotionModel" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>
    <div class="mb-3">
        <label class="form-label alert-warning">@ErrorMessage</label>
    </div>
    <div class="mb-3">
        <label class="form-label">@nameof(PromotionModel.Name)</label>
        <InputText class="form-control"
                   placeholder="Type your desired name for the promo"
                   @bind-Value="@PromotionModel.Name"></InputText>
    </div>
    <div class="mb-3">
        <label class="form-label">@nameof(PromotionModel.Description)</label>
        <InputTextArea class="form-control" @bind-Value="@PromotionModel.Description" rows="10" cols="200"></InputTextArea>
    </div>
    <div class="mb-3">
        <button class="btn btn-secondary" @onclick="OpenSelectImage">Select an Image</button>
    </div>
    @if (this.ShowSelectImageComponent)
    {
        <div class="mb-3">
            <ImageSelectionComponent OnImageSelected="OnImageSelected"></ImageSelectionComponent>
        </div>
    }
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @if (!String.IsNullOrWhiteSpace(PromotionModel.ImageUrl))
        {
            <div class="col">
                <div class="card">
                    <img src="@PromotionModel.ImageUrl" class="card-img-top" alt="...">
                </div>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>
